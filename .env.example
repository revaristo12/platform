# ============================================
# Meeting AI Platform - Environment Variables
# ============================================

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=True
APP_NAME="Meeting AI Platform"
APP_VERSION=1.0.0

# ============================================
# Security
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Database
# ============================================
DATABASE_URL=postgresql://meeting_user:meeting_pass@postgres:5432/meeting_db
POSTGRES_USER=meeting_user
POSTGRES_PASSWORD=meeting_pass
POSTGRES_DB=meeting_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ============================================
# OpenAI (Whisper & GPT)
# ============================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
WHISPER_MODEL=base
# Options: tiny, base, small, medium, large

# ============================================
# Anthropic (Claude)
# ============================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-opus-20240229
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229

# ============================================
# WebRTC / TURN Server
# ============================================
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=meeting
TURN_SERVER_PASSWORD=meeting123
STUN_SERVER_URL=stun:stun.l.google.com:19302

# ============================================
# File Storage
# ============================================
RECORDINGS_PATH=/app/recordings
TRANSCRIPTIONS_PATH=/app/transcriptions
MAX_UPLOAD_SIZE=104857600
# 100MB in bytes

# ============================================
# Celery
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=1800
# 30 minutes

# ============================================
# Email (for notifications - optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@meetingai.com

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Transcription Settings
# ============================================
TRANSCRIPTION_LANGUAGE=pt
# Options: en, pt, es, fr, de, etc.
ENABLE_SPEAKER_DIARIZATION=True
MIN_SPEAKERS=1
MAX_SPEAKERS=10

# ============================================
# AI Analysis Settings
# ============================================
AI_ANALYSIS_ENABLED=True
AI_ANALYSIS_INTERVAL=300
# Analyze every 5 minutes (300 seconds)
AI_ANALYSIS_MIN_WORDS=100
# Minimum words to trigger analysis

# ============================================
# WebSocket Settings
# ============================================
WS_HEARTBEAT_INTERVAL=30
WS_MESSAGE_QUEUE_SIZE=100

# ============================================
# Production Settings (uncomment for production)
# ============================================
# ENVIRONMENT=production
# DEBUG=False
# CORS_ORIGINS=["https://your-domain.com"]
# DATABASE_URL=postgresql://user:password@production-db:5432/db
